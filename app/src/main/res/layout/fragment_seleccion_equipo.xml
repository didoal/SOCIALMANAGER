<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header con Logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/card_profesional"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <!-- Logo del Club -->
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:elevation="8dp">

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_background_white"
                android:elevation="6dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_santiaguino"
                android:elevation="8dp" />

        </FrameLayout>

        <!-- Nombre del Club -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CD SANTIAGUIÑO GUIZÁN"
            android:textColor="@color/blue_profesional"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- Lema del Club -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SANTIAGUIÑO, A NOSA FAMILIA"
            android:textColor="@color/gold"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_team"
                app:tint="@color/text_primary"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Selecciona un equipo"
                style="@style/TitleText"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView para equipos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEquipos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:background="@android:color/transparent" />

    <!-- Mensaje cuando no hay equipos -->
    <LinearLayout
        android:id="@+id/layoutNoEquipos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_team_empty"
            app:tint="@color/gray_light"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay equipos disponibles"
            style="@style/SubtitleText"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacta al administrador para crear equipos"
            style="@style/BodyText"
            android:gravity="center"
            android:layout_marginHorizontal="32dp" />

    </LinearLayout>

</LinearLayout> 