<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con tÃ­tulo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EstadÃ­sticas del Club"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Filtros -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Filtros"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Filtros de fecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fecha Inicio:"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <Button
                            android:id="@+id/buttonFechaInicio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Seleccionar"
                            android:textColor="@color/white"
                            android:background="@drawable/button_blue_background"
                            android:padding="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fecha Fin:"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <Button
                            android:id="@+id/buttonFechaFin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Seleccionar"
                            android:textColor="@color/white"
                            android:background="@drawable/button_blue_background"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Filtros de equipo y jugador -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Equipo:"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <Spinner
                            android:id="@+id/spinnerEquipos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_background"
                            android:padding="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jugador:"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <Spinner
                            android:id="@+id/spinnerJugadores"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_background"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- BotÃ³n limpiar filtros -->
                <Button
                    android:id="@+id/buttonLimpiarFiltros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Limpiar Filtros"
                    android:textColor="@color/white"
                    android:background="@drawable/button_gray_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- BotÃ³n exportar reporte -->
                <Button
                    android:id="@+id/buttonExportarReporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Exportar Reporte"
                    android:textColor="@color/white"
                    android:background="@drawable/button_gold_background"
                    android:padding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- EstadÃ­sticas generales -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EstadÃ­sticas Generales"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvTotalEventos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Eventos: 0"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvTotalAsistencias"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Asistencias: 0"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvTotalMensajes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mensajes: 0"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvTotalObjetos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Objetos: 0"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:gravity="center" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPromedioAsistencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Promedio Asistencia: 0%"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SecciÃ³n de eventos recurrentes -->
        <TextView
            android:id="@+id/tvEventosRecurrentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eventos Recurrentes: 0"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- SecciÃ³n de objetos encontrados -->
        <TextView
            android:id="@+id/tvObjetosEncontrados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objetos Encontrados: 0"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- GrÃ¡ficos de eventos y asistencia -->
        <LinearLayout
            android:id="@+id/layoutGraficoEventos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_marginBottom="12dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tvGraficoEventos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GrÃ¡fico de Eventos"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutGraficoAsistencia"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_marginBottom="12dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tvGraficoAsistencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GrÃ¡fico de Asistencia"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Contenedor de estadÃ­sticas especÃ­ficas -->
        <LinearLayout
            android:id="@+id/contenedorEstadisticasJugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>