<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dom, 4 may - Campo de futbol A Bouza"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Equipo local -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewEquipoLocal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo_santiaguino_guizan"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/textViewEquipoLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SantiaguiÃ±o"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Resultado -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/textViewResultado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 - 2"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewResultadoPrimera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 - 1"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Equipo visitante -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewEquipoVisitante"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_team"
                    android:background="@drawable/circle_background"
                    android:padding="8dp"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/textViewEquipoVisitante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club Deportivo"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Indicador de estado -->
            <View
                android:id="@+id/viewEstado"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_button_green"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView> 