<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_with_logo"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Cabecero reducido -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Equipos"
            android:textColor="@color/blue_profesional"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Filtros Avanzados Colapsables -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header de Filtros -->
                <LinearLayout
                    android:id="@+id/layoutHeaderFiltros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/gradient_blue_light"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/blue_profesional"
                        android:layout_marginEnd="12dp" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FILTROS AVANZADOS"
                        android:textColor="@color/blue_profesional"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageViewExpandirFiltros"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clear"
                        app:tint="@color/blue_profesional" />

                </LinearLayout>

                <!-- Contenido de Filtros (Inicialmente oculto) -->
                <LinearLayout
                    android:id="@+id/layoutContenidoFiltros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Primera fila de filtros -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Filtro por Categoría -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CATEGORÍA"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <Spinner
                                android:id="@+id/spinnerFiltroCategoria"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/spinner_background"
                                android:padding="12dp" />

                        </LinearLayout>

                        <!-- Filtro por Estado -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ESTADO"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <Spinner
                                android:id="@+id/spinnerFiltroEstado"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/spinner_background"
                                android:padding="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Segunda fila de filtros -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Filtro por Número de Jugadores -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nº JUGADORES"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <Spinner
                                android:id="@+id/spinnerFiltroNumJugadores"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/spinner_background"
                                android:padding="12dp" />

                        </LinearLayout>

                        <!-- Filtro por Entrenador -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ENTRENADOR"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <Spinner
                                android:id="@+id/spinnerFiltroEntrenador"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/spinner_background"
                                android:padding="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botones de acción de filtros -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonAplicarFiltros"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="APLICAR FILTROS"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@drawable/button_blue_selector"
                            android:layout_marginEnd="8dp"
                            android:padding="12dp"
                            android:elevation="3dp" />

                        <Button
                            android:id="@+id/buttonLimpiarFiltros"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="LIMPIAR FILTROS"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@drawable/button_gray_selector"
                            android:layout_marginStart="8dp"
                            android:padding="12dp"
                            android:elevation="3dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Controles de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Primera fila de botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/buttonImportarExcel"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="📊 IMPORTAR EXCEL"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_gold_selector"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp"
                    android:elevation="3dp" />

                <Button
                    android:id="@+id/buttonExportarEquipos"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="📋 EXPORTAR EQUIPOS"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_blue_selector"
                    android:layout_marginStart="8dp"
                    android:padding="12dp"
                    android:elevation="3dp" />

            </LinearLayout>

            <!-- Segunda fila de botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonCrearEquipo"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="➕ CREAR EQUIPO"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_green_selector"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp"
                    android:elevation="3dp" />

                <Button
                    android:id="@+id/buttonDescargarPlantilla"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="📥 DESCARGAR PLANTILLA"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_gray_selector"
                    android:layout_marginStart="8dp"
                    android:padding="12dp"
                    android:elevation="3dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Tarjetas de Estadísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- Primera fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Tarjeta Total Equipos -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/gradient_blue_light">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_team"
                            app:tint="@color/blue_profesional" />

                        <TextView
                            android:id="@+id/textViewTotalEquipos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/blue_profesional"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL EQUIPOS"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <!-- Segunda fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Tarjeta Promedio Jugadores -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/gradient_orange_light">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_person"
                            app:tint="@color/orange_warning" />

                        <TextView
                            android:id="@+id/textViewPromedioJugadores"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/orange_warning"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PROMEDIO/EQUIPO"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tarjeta Categorías -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/gradient_purple_light">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_group"
                            app:tint="@color/purple_accent" />

                        <TextView
                            android:id="@+id/textViewTotalCategorias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/purple_accent"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CATEGORÍAS"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Listado de Equipos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTADO DE EQUIPOS"
            android:textColor="@color/blue_profesional"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEquipos"
            style="@style/RecyclerViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarStyle="insideOverlay" />

        <!-- Botón flotante para agregar equipo -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="24dp"
        android:src="@drawable/ic_add"
            app:backgroundTint="@color/blue_profesional"
        app:tint="@color/white"
            android:contentDescription="Agregar equipo" />

        <!-- TextView requerido por el código Java -->
        <TextView
            android:id="@+id/textViewEstadisticas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView> 