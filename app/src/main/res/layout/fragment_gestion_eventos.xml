<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_with_logo">

    <!-- Marca de agua: logo auténtico de fondo -->
    <ImageView
        android:id="@+id/imageViewLogoFondoEventos"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_santiaguino_guizan"
        android:alpha="0.08"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cabecero reducido -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Eventos"
            android:textColor="@color/blue_profesional"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Tarjetas de estadísticas rápidas (opcional, puedes añadir más) -->
        <!-- ... aquí puedes añadir tarjetas como en notificaciones si lo deseas ... -->

        <!-- Botones de acción principales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Primera fila de botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/buttonCrearEvento"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="🎯 CREAR\nEVENTO"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_blue_selector"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/buttonCrearEntrenamiento"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="🏃 CREAR\nENTRENAMIENTO"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_blue_selector"
                    android:layout_marginStart="8dp"
                    android:padding="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:elevation="4dp" />

            </LinearLayout>

            <!-- Segunda fila de botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/buttonCrearPartido"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="⚽ CREAR\nPARTIDO"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_blue_selector"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/buttonCrearReunion"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="👥 CREAR\nREUNIÓN"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_blue_selector"
                    android:layout_marginStart="8dp"
                    android:padding="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:elevation="4dp" />

            </LinearLayout>

            <!-- Tercera fila de botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonExportarEventos"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="📊 EXPORTAR\nREPORTE"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_green_selector"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/buttonCalendarioEventos"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="📅 VER\nCALENDARIO"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_gold_selector"
                    android:layout_marginStart="8dp"
                    android:padding="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:elevation="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botones de filtros -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/buttonMostrarFiltrosAvanzados"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="🔍 Filtros Avanzados"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_gold_background"
                android:layout_marginEnd="8dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/buttonLimpiarFiltros"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="🔄 Limpiar"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_secondary_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Filtros avanzados (inicialmente ocultos) -->
        <LinearLayout
            android:id="@+id/layoutFiltrosAvanzados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_profesional"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚙️ Filtros Avanzados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blue_profesional"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Filtro por tipo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="📝 Tipo:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerFiltroTipoEvento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Filtro por equipo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="🏆 Equipo:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerFiltroEquipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Filtro por fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="📅 Fecha:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerFiltroFecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Filtro por estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="⏳ Estado:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerFiltroEstado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Filtro por prioridad (opcional, si aplica en tu modelo de evento) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Prioridad:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerFiltroPrioridad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Lista de eventos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEventos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="80dp" />

    </LinearLayout>

    <!-- Floating Action Button para agregar evento -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorAccent"
        app:tint="@color/white"
        app:fabSize="normal" />

    <!-- Floating Action Button para agregar entrenamientos -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarEntrenamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="96dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/blue_profesional"
        app:tint="@color/white"
        app:fabSize="normal" />

    <!-- TextView requerido por el código Java -->
    <TextView
        android:id="@+id/textViewEstadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</FrameLayout> 