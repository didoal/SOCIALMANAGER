<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <!-- Logo circular con borde azul y sombra -->
    <FrameLayout
        android:id="@+id/logo_container"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:elevation="12dp">

        <View
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/circle_background"
            android:elevation="8dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_santiaguino"
            android:elevation="12dp" />
    </FrameLayout>

    <!-- Branding -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="CD Santiaguiño Guizán"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/blue_profesional"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/app_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:layout_centerHorizontal="true"
        android:text="Bienvenido a la familia del Santiaguiño"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:alpha="0.8"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="12dp" />

    <!-- Tarjeta de login -->
    <androidx.cardview.widget.CardView
        android:id="@+id/login_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/blue_profesional"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Campo Usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_background"
                android:padding="14dp"
                android:layout_marginBottom="18dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/blue_profesional"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp" />

                <EditText
                    android:id="@+id/et_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Usuario o Email"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_light"
                    android:background="@null"
                    android:inputType="text|textEmailAddress"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Campo Contraseña con mostrar/ocultar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_background"
                android:padding="14dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/blue_profesional"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Contraseña"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_light"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:id="@+id/iv_toggle_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_eye"
                    app:tint="@color/blue_profesional"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp" />
            </LinearLayout>

            <!-- Mensaje de error animado -->
            <TextView
                android:id="@+id/tv_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- Botón de Login -->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="INICIAR SESIÓN"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_blue_background"
                android:elevation="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Información adicional -->
    <!-- TextView eliminado por seguridad, no mostrar credenciales -->

</RelativeLayout> 