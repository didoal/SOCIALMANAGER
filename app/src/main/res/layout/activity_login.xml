<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesi칩n"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/blue_profesional"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/et_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_person"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:id="@+id/iv_clear_usuario"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_clear"
        android:layout_gravity="end"
        android:layout_marginBottom="8dp"
        android:contentDescription="Limpiar usuario" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_lock"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:id="@+id/iv_clear_password"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_clear"
        android:layout_gravity="end"
        android:layout_marginBottom="8dp"
        android:contentDescription="Limpiar contrase침a" />

    <ImageView
        android:id="@+id/iv_toggle_password"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_eye"
        android:layout_gravity="end"
        android:contentDescription="Mostrar/Ocultar contrase침a"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_profesional"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:textColor="@color/white"
        android:background="@drawable/button_blue_background"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

</LinearLayout>