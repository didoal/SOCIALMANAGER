<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Informaci贸n del usuario -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Usuario"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email@ejemplo.com"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewRol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rol"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rol_user_background" />

            <TextView
                android:id="@+id/textViewJugador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jugador: Nombre del Jugador"
                android:textColor="@color/colorTextSecondary"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/textViewEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipo: Nombre del Equipo"
                android:textColor="@color/colorTextSecondary"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Botones de acci贸n -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Bot贸n editar -->
            <ImageButton
                android:id="@+id/buttonEditar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:background="@drawable/circle_button_blue"
                android:contentDescription="Editar usuario"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Bot贸n eliminar -->
            <ImageButton
                android:id="@+id/buttonEliminar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:background="@drawable/circle_button_red"
                android:contentDescription="Eliminar usuario"
                android:scaleType="centerInside"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 