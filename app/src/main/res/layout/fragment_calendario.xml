<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header del Calendario sobre fondo blanco -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="8dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calendario de Eventos"
            android:textColor="#222"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="start" />

        <TextView
            android:id="@+id/textViewFechaActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Julio 2024"
            android:textColor="#2196F3"
            android:textSize="16sp"
            android:gravity="start"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Pestañas de Vista -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="4dp"
        app:tabIndicatorColor="#2196F3"
        app:tabSelectedTextColor="#2196F3"
        app:tabTextColor="#888"
        app:tabTextAppearance="@style/TabTextAppearance"
        app:tabMode="scrollable">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listado" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Día" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semana" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mes" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Año" />

    </com.google.android.material.tabs.TabLayout>

    <!-- ViewPager para las diferentes vistas -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="0dp" />

    <!-- Botón Flotante para Crear Evento -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCrearEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="#2196F3"
        app:tint="@color/white"
        app:fabSize="normal" />

</LinearLayout> 