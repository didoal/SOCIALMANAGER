<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header profesional -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/blue_profesional">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Logo del Club -->
                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:elevation="8dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circle_background_white"
                        android:elevation="6dp" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logo_santiaguino"
                        android:elevation="8dp" />

                </FrameLayout>

                <!-- Nombre del Club -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CD SANTIAGUIÃ‘O GUIZÃN"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <!-- Lema del Club -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SANTIAGUIÃ‘O, A NOSA FAMILIA"
                    android:textColor="@color/gold"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Control de Asistencia"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/textViewResumenFiltros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Filtros aplicados: Todos los equipos"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/rounded_background_white_transparent"
                    android:padding="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tarjetas de estadÃ­sticas rÃ¡pidas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <!-- Tarjeta Confirmados -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/gradient_green_light">

                    <TextView
                        android:id="@+id/textViewConfirmados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/green_success"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmados"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta No Asisten -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/gradient_red_light">

                    <TextView
                        android:id="@+id/textViewNoAsisten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/red_error"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Asisten"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Botones de acciÃ³n principales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- BotÃ³n exportar asistencia (solo admin) -->
            <Button
                android:id="@+id/btnExportarPdf"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ“Š Exportar Reporte PDF"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_green_background"
                android:layout_marginBottom="12dp"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Botones de filtros -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/buttonMostrarFiltrosAvanzados"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="ðŸ” Filtros Avanzados"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_gold_background"
                android:layout_marginEnd="8dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/buttonLimpiarFiltros"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="ðŸ”„ Limpiar"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_secondary_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Filtros avanzados (inicialmente ocultos) -->
        <LinearLayout
            android:id="@+id/layoutFiltrosAvanzados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_profesional"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ Filtros Avanzados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blue_profesional"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Filtro por fechas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… Desde:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Button
                    android:id="@+id/btnFechaDesde"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Seleccionar fecha"
                    android:textSize="12sp"
                    android:background="@drawable/button_outline_background"
                    android:textColor="@color/blue_profesional"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Hasta:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Button
                    android:id="@+id/btnFechaHasta"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Seleccionar fecha"
                    android:textSize="12sp"
                    android:background="@drawable/button_outline_background"
                    android:textColor="@color/blue_profesional" />

            </LinearLayout>

            <!-- Filtro por tipo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Tipo:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerTipoFiltro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Filtros condicionales -->
            <LinearLayout
                android:id="@+id/layoutFiltroEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Equipo:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerEquipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFiltroCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ CategorÃ­a:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerCategoria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFiltroJugador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤ Jugador:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerJugador"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- BotÃ³n aplicar filtros -->
            <Button
                android:id="@+id/btnAplicarFiltros"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="âœ… Aplicar Filtros"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_blue_background"
                android:layout_marginTop="8dp"
                android:padding="12dp" />

        </LinearLayout>

        <!-- GrÃ¡fico de asistencias -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ˆ EstadÃ­sticas de Asistencia"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chartAsistencias"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Lista de asistencias -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAsistencias"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="80dp" />

    </LinearLayout>

    <!-- Floating Action Button para registrar asistencia -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRegistrarAsistencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorAccent"
        app:tint="@color/white"
        app:fabSize="normal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 