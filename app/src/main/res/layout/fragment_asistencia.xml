<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header profesional con bot칩n de exportar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/blue_profesional">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="游늵 Control de Asistencia"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textViewResumenFiltros"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Filtros aplicados: Todos los equipos"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:alpha="0.9" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnExportarPdf"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_pdf"
                    android:background="@drawable/circle_background_white"
                    android:padding="12dp"
                    android:contentDescription="Exportar PDF"
                    android:tint="@color/blue_profesional" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Filtros avanzados -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="游댌 Filtros Avanzados"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Filtro por fechas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="游늰 Desde:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <Button
                        android:id="@+id/btnFechaDesde"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Seleccionar fecha"
                        android:background="@drawable/button_outline_background"
                        android:textColor="@color/blue_profesional"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Hasta:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <Button
                        android:id="@+id/btnFechaHasta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Seleccionar fecha"
                        android:background="@drawable/button_outline_background"
                        android:textColor="@color/blue_profesional" />

                </LinearLayout>

                <!-- Filtro por tipo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="游꿢 Tipo:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <Spinner
                        android:id="@+id/spinnerTipoFiltro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:padding="12dp" />

                </LinearLayout>

                <!-- Filtros condicionales -->
                <LinearLayout
                    android:id="@+id/layoutFiltroEquipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="游끥 Equipo:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <Spinner
                        android:id="@+id/spinnerEquipo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:padding="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutFiltroCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="游늶 Categor칤a:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <Spinner
                        android:id="@+id/spinnerCategoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:padding="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutFiltroJugador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="游녻 Jugador:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <Spinner
                        android:id="@+id/spinnerJugador"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:padding="12dp" />

                </LinearLayout>

                <!-- Bot칩n aplicar filtros -->
                <Button
                    android:id="@+id/btnAplicarFiltros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="游댌 Aplicar Filtros"
                    android:background="@drawable/button_blue_background"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Resumen y gr치fico -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="游늳 Resumen de Asistencias"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Estad칤sticas r치pidas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/gradient_green_light"
                        android:padding="12dp"
                        android:layout_marginEnd="4dp">

                        <TextView
                            android:id="@+id/textViewConfirmados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/green_success"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asistencias"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/gradient_red_light"
                        android:padding="12dp"
                        android:layout_marginEnd="4dp">

                        <TextView
                            android:id="@+id/textViewNoAsisten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/red_error"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ausencias"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/gradient_orange_light"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/textViewPorcentaje"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/orange_warning"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Porcentaje"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Gr치fico -->
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chartAsistencias"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Lista de asistencias -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAsistencias"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="80dp" />

    </LinearLayout>

    <!-- FAB para registrar asistencia -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRegistrarAsistencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/blue_profesional"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 