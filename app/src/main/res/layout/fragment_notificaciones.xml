<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Profesional con Logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_blue_professional"
            android:padding="24dp"
            android:layout_marginBottom="20dp">

            <!-- Logo del Club -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:elevation="12dp">

                <View
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circle_background_white"
                    android:elevation="8dp" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_santiaguino"
                    android:elevation="12dp" />

            </FrameLayout>

            <!-- Nombre del Club -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CD SANTIAGUIÑO GUIZÁN"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <!-- Lema del Club -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SANTIAGUIÑO, A NOSA FAMILIA"
                android:textColor="@color/gold"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔔 CENTRO DE NOTIFICACIONES"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mantente informado de todo lo importante"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:alpha="0.9" />

                <!-- Estadísticas mejoradas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background_white_transparent"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textViewTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textColor="@color/gold"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gold"
                        android:alpha="0.3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textViewNoLeidas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Leídas"
                            android:textColor="@color/gold"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botones de acción principales mejorados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <!-- Botón marcar todas como leídas -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/buttonMarcarLeidas"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="✅ Marcar\nTodas Leídas"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_blue_background"
                    android:padding="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

            <!-- Botón borrar notificaciones -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/buttonBorrarNotificaciones"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="🗑️ Borrar\nNotificaciones"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_red_background"
                    android:padding="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Botones de filtro mejorados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/buttonFiltroTodas"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="📋\nTodas"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_gray_background"
                    android:padding="8dp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/buttonFiltroNoLeidas"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="🔴\nNo leídas"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_red_background"
                    android:padding="8dp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/buttonFiltroLeidas"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="✅\nLeídas"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_green_background"
                    android:padding="8dp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Botones de filtros avanzados mejorados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/buttonFiltrosAvanzados"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🔍 Filtros\nAvanzados"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_gold_background"
                    android:padding="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/buttonLimpiarFiltros"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🔄 Limpiar\nFiltros"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_secondary_background"
                    android:padding="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Botón exportar notificaciones (solo admin) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:visibility="gone">

            <Button
                android:id="@+id/buttonExportarNotificaciones"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="📊 Exportar Reporte de Notificaciones"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/button_green_background"
                android:padding="16dp"
                android:stateListAnimator="@null" />

        </androidx.cardview.widget.CardView>

        <!-- Filtros avanzados (inicialmente ocultos) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/layoutFiltrosAvanzados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_profesional"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Filtros Avanzados"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_profesional"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <!-- Filtro por tipo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="📝 Tipo:"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <Spinner
                        android:id="@+id/spinnerTipoNotificacion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:padding="14dp" />

                </LinearLayout>

                <!-- Filtro por equipo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="🏆 Equipo:"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <Spinner
                        android:id="@+id/spinnerEquipo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:padding="14dp" />

                </LinearLayout>

                <!-- Filtro por fecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="📅 Fecha:"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <Spinner
                        android:id="@+id/spinnerFecha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:padding="14dp" />

                </LinearLayout>

                <!-- Filtro por prioridad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="⚠️ Prioridad:"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <Spinner
                        android:id="@+id/spinnerPrioridad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:padding="14dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Layout para mostrar mensaje si no hay notificaciones -->
        <androidx.cardview.widget.CardView
            android:id="@+id/layoutNoNotificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:background="@drawable/card_profesional">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📭"
                    android:textSize="64sp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay notificaciones disponibles"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Las notificaciones aparecerán aquí cuando lleguen"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Lista de notificaciones -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNotificaciones"
            style="@style/RecyclerViewStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="100dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 