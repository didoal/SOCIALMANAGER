<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con título y estadísticas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notificaciones"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/textViewEstadisticas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: 0 | No leídas: 0 | Recordatorios: 0 | Mensajes: 0"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/rounded_background_white_transparent"
                    android:padding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Estadísticas adicionales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewNoLeidas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/textViewTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- Filtros básicos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/buttonMarcarLeidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marcar todas como leídas"
                android:textColor="@color/white"
                android:background="@drawable/button_blue_background"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonFiltroTodas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todas"
                android:textColor="@color/white"
                android:background="@drawable/button_gray_background"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/buttonFiltroNoLeidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No leídas"
                android:textColor="@color/white"
                android:background="@drawable/button_red_background"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/buttonFiltroLeidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leídas"
                android:textColor="@color/white"
                android:background="@drawable/button_green_background" />
        </LinearLayout>

        <!-- Botón para mostrar/ocultar filtros avanzados -->
        <Button
            android:id="@+id/buttonFiltrosAvanzados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔍 Filtros Avanzados"
            android:textColor="@color/white"
            android:background="@drawable/button_gold_background"
            android:layout_marginBottom="8dp" />

        <!-- Filtros avanzados (inicialmente ocultos) -->
        <LinearLayout
            android:id="@+id/layoutFiltrosAvanzados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_profesional"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filtros Avanzados"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Filtro por tipo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Tipo:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerTipoNotificacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Filtro por equipo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Equipo:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerEquipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Layout para mostrar mensaje si no hay notificaciones -->
        <LinearLayout
            android:id="@+id/layoutNoNotificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay notificaciones disponibles"
                android:textColor="@color/colorTextSecondary"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Lista de notificaciones -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNotificaciones"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="80dp" />

    </LinearLayout>

    <!-- Floating Action Button para crear notificación -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCrearNotificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorAccent"
        app:tint="@color/white"
        app:fabSize="normal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 