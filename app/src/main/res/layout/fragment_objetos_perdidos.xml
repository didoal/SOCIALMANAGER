<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header profesional -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/blue_profesional"
        android:padding="20dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Objetos Perdidos"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/buttonAgregarObjeto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Agregar"
            android:background="@drawable/button_gold_background"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Filtros y estadÃ­sticas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp">

        <!-- Tarjeta de objetos perdidos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_profesional"
            android:padding="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perdidos"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewPerdidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/danger" />

        </LinearLayout>

        <!-- Tarjeta de objetos encontrados -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_profesional"
            android:padding="16dp"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encontrados"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewEncontrados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/gold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Filtros -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp">

        <Button
            android:id="@+id/buttonFiltroTodos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Todos"
            android:background="@drawable/button_gold_background"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/buttonFiltroPerdidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perdidos"
            android:background="@drawable/button_secondary_background"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/buttonFiltroEncontrados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Encontrados"
            android:background="@drawable/button_secondary_background"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Lista de objetos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewObjetos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:background="@android:color/transparent" />

    <!-- Mensaje cuando no hay objetos -->
    <TextView
        android:id="@+id/textViewSinObjetos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay objetos perdidos registrados"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="32dp" />

</LinearLayout> 