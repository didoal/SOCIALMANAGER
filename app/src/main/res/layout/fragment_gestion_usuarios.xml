<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Marca de agua: logo auténtico de fondo -->
    <ImageView
        android:id="@+id/imageViewLogoFondoUsuarios"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_santiaguino_guizan"
        android:alpha="0.08"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cabecero reducido -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Usuarios"
            android:textColor="@color/blue_profesional"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Botones de acción principales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Botón exportar usuarios (solo admin) -->
            <Button
                android:id="@+id/buttonExportarUsuarios"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="📊 Exportar Reporte"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_green_background"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Botones de filtros -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/buttonMostrarFiltrosAvanzados"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="🔍 Filtros Avanzados"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_gold_background"
                android:layout_marginEnd="8dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/buttonLimpiarFiltros"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="🔄 Limpiar"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_secondary_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Filtros avanzados (inicialmente ocultos) -->
        <LinearLayout
            android:id="@+id/layoutFiltrosAvanzados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_profesional"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚙️ Filtros Avanzados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blue_profesional"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Filtro por rol -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="👤 Rol:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerFiltroRol"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Filtro por equipo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="🏆 Equipo:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerFiltroEquipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Filtro por estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="⏳ Estado:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerFiltroEstado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Filtro por fecha de registro -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="📅 Registro:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerFiltroFechaRegistro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Selector de equipo para admin (mantener el existente) -->
        <TextView
            android:id="@+id/textViewSeleccionEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona un equipo"
            android:textColor="@color/blue_profesional"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spinnerEquipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Lista de usuarios -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewUsuarios"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="80dp" />

        <!-- TextView requerido por el código Java -->
        <TextView
            android:id="@+id/textViewEstadisticas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Floating Action Button para agregar usuario -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorAccent"
        app:tint="@color/white"
        app:fabSize="normal" />

</FrameLayout> 