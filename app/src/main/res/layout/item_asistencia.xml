<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Información de la asistencia -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/textViewJugador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jugador: Nombre del Jugador"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evento: Entrenamiento Sub-12"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha: 01/01/2024 18:00"
                android:textColor="@color/colorTextSecondary"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ASISTIÓ"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewMotivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motivo: Enfermedad"
                android:textColor="@color/colorTextSecondary"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Botón confirmar -->
        <ImageButton
            android:id="@+id/buttonConfirmar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_check"
            android:background="@drawable/circle_button_green"
            android:contentDescription="Confirmar asistencia"
            android:scaleType="centerInside"
            android:padding="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 