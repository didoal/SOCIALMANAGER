<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del jugador"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewJugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alias o nombre de jugador"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonAccion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_button_blue"
        android:contentDescription="AcciÃ³n"
        android:scaleType="centerInside"
        android:padding="8dp" />

</LinearLayout> 