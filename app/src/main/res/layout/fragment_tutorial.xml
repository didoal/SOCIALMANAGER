<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header Profesional con Logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_blue_professional"
        android:padding="24dp"
        android:layout_marginBottom="20dp">

        <!-- Logo del Club -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:elevation="12dp">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_background_white"
                android:elevation="8dp" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_santiaguino"
                android:elevation="12dp" />

        </FrameLayout>

        <!-- Nombre del Club -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CD SANTIAGUIÑO GUIZÁN"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- Lema del Club -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SANTIAGUIÑO, A NOSA FAMILIA"
            android:textColor="@color/gold"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TUTORIAL DE USUARIO"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aprende a usar la aplicación"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Contenido del tutorial -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerTutorial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp" />

    <!-- Indicadores de página -->
    <LinearLayout
        android:id="@+id/layoutIndicadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Botones de navegación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/buttonOmitir"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="OMITIR"
            android:background="@drawable/button_gray_background"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_close"
            android:drawablePadding="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonSiguiente"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="SIGUIENTE"
            android:background="@drawable/button_blue_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:drawablePadding="8dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout> 