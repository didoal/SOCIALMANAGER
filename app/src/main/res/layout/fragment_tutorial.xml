<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_with_logo">

    <!-- Cabecero reducido -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tutorial"
        android:textColor="@color/blue_profesional"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Contenido del tutorial -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerTutorial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp" />

    <!-- Indicadores de página -->
    <LinearLayout
        android:id="@+id/layoutIndicadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Botones de navegación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/buttonOmitir"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="OMITIR"
            android:background="@drawable/button_gray_background"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_close"
            android:drawablePadding="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonSiguiente"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="SIGUIENTE"
            android:background="@drawable/button_blue_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:drawablePadding="8dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout> 